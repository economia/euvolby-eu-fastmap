@import colors
@import prefixes
@import extraIg

.ig
    @import basics
.ig.base
    position absolute
    top 0px
    left 0px
    bottom 0px
    width 100%
    path:hover
        fill-opacity 0.8
    .leaflet-container
        position absolute
        top 0px
        left 0px
        bottom 0px
        width 100%
        .leaflet-control-attribution
            width 250px 
            text-align right
    .infobox
        z-index 99
        position absolute
        top 0px
        right 0px
        background #fafafa
        border-left 1px solid #ddd
        border-bottom 1px solid #ddd
        width 300px
        padding-left 20px
        padding-right 20px
        padding-bottom 10px
        .countryName
            font-weight bold
            margin-top 10px
            margin-bottom 8px
        .poslanciContainer
            .poslanec
                display block
                width 10px
                height 10px
                margin 2px
                float left
                cursor help
        .partyContainer
            margin-top 12px
            float left
            clear left
            padding-left 0px
            list-style-type none
            line-height 1.4em
    .legend
        z-index 10
        position absolute
        bottom 0px
        left 0px
        overflow hidden
        border-bottom-right-radius 4px
        border-top-right-radius 4px
        border 1px solid #aaa
        cursor pointer
        span
            display block
            float left
            font-size 0.9em
            padding 2px 10px
        &.winners
            span
                width 50px
                padding 2px 0px
                text-align center
                text-shadow #aaa 0px 0px 2px
                cursor help
                &:nth-child(2)
                &:nth-child(5)
                &:nth-child(6)
                // &:last-child
                    color white